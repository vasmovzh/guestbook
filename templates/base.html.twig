<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    <header>
        <h1><a href="{{ path('homepage') }}">{{ 'Guestbook'|trans }}</a></h1>
        <div>
            <a href="#" class="nav-link dropdown-toggle" id="dropdown-language" role="button" aria-haspopup="true" aria-expanded="false">
                {{ app.request.locale|locale_name(app.request.locale)|u.title }}
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-language">
                <a class="dropdown-item" href="{{ path('homepage', {_locale: 'en'}) }}">En</a>
                <a class="dropdown-item" href="{{ path('homepage', {_locale: 'ru'}) }}">Ru</a>
            </div>
        </div>
    </header>
        {% block body %}{% endblock %}
    </body>
</html>
